<div class="text-center start_page">
  <h3 class="greeting text-center m-auto">Личная информация</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.hidden_field :phone, value: params[:phone] %>
  </div>
  <div class="field border border-info input_for_form m-auto text-left">
    <p class="phonenumber text-left m-0">Имя пользователя</p>
    <%= f.text_field :nickname, autofocus: true, :class => "input_phone mr-5" %>
  </div>
  <%= f.submit 'Сохранить изменения', class: 'send-phone' %>
  <% end %>
</div>
<div class="">
  <h3 class="greeting text-center m-auto">Безопасность</h3>
<div class="field border border-info input_for_form m-auto text-left">
<i class="fa fa-lock"></i>
   <i class="fa fa-chevron-right"></i>
  </div>
  <div class="field border border-info input_for_form m-auto text-left">
    <i class="fa fa-times"></i>
    <%= link_to "Удалить аккаунт" , registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    <i class="fa fa-chevron-right"></i>
  </div>
</div>


<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>