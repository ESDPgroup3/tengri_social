<div class="password_page">
  <div class="form-in-authentication">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% flash.each do |key, value| %>
    <% if value == "Неверный пароль" %>
    <div class=" incorrect-password alert alert-dismissible alert-<%= key.to_s == 'notice' ? 'success' : 'danger' %>" role="alert">
      <%= value if value.is_a?(String) %>
    </div>
    <% else %>
    <div class="correct-password"></div>
    <% end %>
    <% end %>
    <h3 class="names-sectors">Привет, <%= @user.nickname %> </h3>
    <div class="field">
      <%= f.check_box :remember_me %> <%= f.label :remember_me, value = "запомнить меня" %>
      <%= f.hidden_field :phone, value: cookies[:phone] %>
    </div>
    <div class="input_for_form input_valide">
      <p class="hint-input">Ваш пароль</p>
      <%= f.password_field :password, :autofocus => true, autocomplete: "current-password", :class => "input_information" %>
      <span toggle="#user_password" class="fa fa-eye-slash fa-fw field-icon toggle-password"></span>
    </div>
    <%= f.submit 'Продолжить', class: 'send-information'  %>
    <% end %>
    <div class="forgot-password">
      <%= link_to "Забыли пароль?", new_password_path(resource_name), :class => "link-forgot-password" %>
    </div>
  </div>
</div>