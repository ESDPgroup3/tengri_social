          <% end %>
        </div>
        <% elsif params[:action] == 'hashtag_search' && params[:controller] == 'searches' %>
          <div class="h6 m-0 search_div">
            <%= form_tag hashtag_search_path, method: :get do %>
              <%= text_field_tag :query, params[:query], autofocus: true, placeholder: "Поиск публикаций по меткам", class: 'search_control' %>
