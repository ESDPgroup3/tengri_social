<nav class="navbar fixed-top top_nav nav_app">
  <div class="container">
    <div class="bg-white navbar-expand-md nav-justified">
      <% if params[:action] == 'index' && params[:controller] == 'searches' %>
        <div class="">
          <%= link_to(posts_path, class: 'text-primary') do %> 
            <p class="nav_link m-0"><%= show_svg('union.svg') %> <span class="none-mobile">Назад</span>  </p>
          <% end %>
        </div>
        <% elsif params[:action] == 'phone_search' && params[:controller] == 'searches' || params[:action] == 'hashtag_search' && params[:controller] == 'searches' %>
          <%= link_to(searches_path, class: 'text-primary') do %> 
            <p class="nav_link m-0"><%= show_svg('union.svg') %> <span class="none-mobile">Назад</span>  </p>
          <% end %>
      <%end %>  
      <% if params[:action] == 'index' && params[:controller] == 'searches' %>
